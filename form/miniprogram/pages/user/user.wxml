<!--pages/mall.wxml-->
<view class="panel-user">
  <van-row>
  <van-col span="5">
    <div class="col-content">
      <div class="icon-container">
        <van-image
          round
          width="3rem"
          height="3rem"
          src="https://img.yzcdn.cn/vant/cat.jpeg"
        />
      </div>
    </div>
  </van-col>
  <van-col span="14">
      双拳震河洛
  </van-col>
  <van-col span="5">
    <div class="icon-container">
      <van-icon name="chat-o" size="25" info="1" />
    </div>
  </van-col>
</van-row>
</view>

<view class="panel-collect">
<van-row gutter="15">
  <van-col span="6">
    <div class="icon-container">
      <van-icon name="coupon-o" size="30" info="1" />
    </div>
    <div class="text">优惠券</div>
  </van-col>
  <van-col span="6">
    <div class="icon-container">
      <van-icon name="star-o" size="30" />
    </div>
    <div class="text">商品收藏</div>
  </van-col>
  <van-col span="6">
    <div class="icon-container">
      <van-icon name="shop-collect-o" size="30" />
    </div>
    <div class="text">店铺收藏</div>
  </van-col>
  <van-col span="6">
    <div class="icon-container">
      <van-icon name="todo-list-o" size="30" />
    </div>
    <div class="text">浏览记录</div>
  </van-col>
</van-row>
</view>

<!-- 订单面板  -->
<view class="panel-order">
  <van-panel>
    <van-row>
      <van-col span="17">
      <div class="panel-order-top">
      我的订单
      </div>
      </van-col>
      <van-col span="7">
        <div class="panel-order-top-all-order">
          <div class="text">
          全部订单<van-icon name="arrow" /></div>
        </div>
      </van-col>
    </van-row>

<!-- 订单面板 -->
  <van-row>
  <van-col span="4">
    <div class="panel-order-menu">
      <div class="icon-container">
      <van-icon name="credit-pay" size="20"/>
      </div>
      <div class="text-small">待付款</div>
    </div>
  </van-col>
  <van-col span="4" offset="1">
    <div class="panel-order-menu">
      <div class="icon-container">
      <van-icon name="send-gift-o" size="20" />
      </div>
      <div class="text-small">待发货</div>
    </div>
  </van-col>
  <van-col span="4" offset="1">
    <div class="panel-order-menu">
      <div class="icon-container">
      <van-icon name="logistics" size="20" />
      </div>
      <div class="text-small">待收货</div>
    </div>
  </van-col>
  <van-col span="4" offset="1">
    <div class="panel-order-menu">
      <div class="icon-container">
      <van-icon name="comment-o" size="20" />
      </div>
      <div class="text-small">待评价</div>
    </div>
  </van-col>
  <van-col span="4">
    <div class="panel-order-menu">
      <div class="icon-container">
      <van-icon name="after-sale" size="20" />
      </div>
      <div class="text-small">退款/售后</div>
    </div>
  </van-col>
</van-row>
</van-panel>
</view>

<!-- 菜单面板  -->
<view class="panel-menu">
  <van-panel>
  <view slot="">
    <van-row gutter="15">
  <van-col span="6" name="menu">
    <div class="panel-menu-col">
      <div class="icon-container" >
      <van-icon name="balance-o" size="22"/>
      </div>
      <div class="text">我的钱包</div>
    </div>
  </van-col>
  <van-col span="6">
    <div class="panel-menu-col">
      <div class="icon-container">
      <van-icon name="guide-o" size="22" />
      </div>
      <div class="text">收货地址</div>
    </div>
  </van-col>
  <van-col span="6">
    <div class="panel-menu-col">
      <div class="icon-container">
      <van-icon name="service-o" size="22" />
      </div>
      <div class="text">官方客服</div>
    </div>
  </van-col>
  <van-col span="6">
    <div class="panel-menu-col">
      <div class="icon-container">
      <van-icon name="shop-o" size="22" />
      </div>
      <div class="text">我要开店</div>
    </div>
  </van-col>
  <van-col span="6">
    <div class="panel-menu-col-2">
      <div class="icon-container">
      <van-icon name="fire-o" size="22" />
      </div>
      <div class="text">排行榜</div>
    </div>
  </van-col>
  <van-col span="6">
    <div class="panel-menu-col-2">
      <div class="icon-container">
      <van-icon name="bag-o" size="22" />
      </div>
      <div class="text">品牌好店</div>
    </div>
  </van-col>
  <van-col span="6">
    <div class="panel-menu-col-2">
      <div class="icon-container">
      <van-icon name="friends-o" size="22" />
      </div>
      <div class="text">今日必拼</div>
    </div>
  </van-col>
  </van-row>
  </view>
  </van-panel>
</view>
