/* pages/good/good.wxss */

page {
    background-color: #f2f3f5; /* 设置您想要的背景颜色 */
  }

.good-swiper{
    height: 280px;
}

.good-price{
    padding-top: 15px;
    padding-left: 10px;
    background-color: white;
}

.good-price-unit{
    font-size: smaller;
    color: red;
    font-weight: bold;
}
.good-price-text{
    font-size: larger;
    color: red;
    font-weight: bolder;
}

.good-title {
    background-color: white;
    padding-top: 10px;
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    width: 100%;
    padding-bottom: 10px;
}

.good-title-text{
    padding-left: 10px;
    padding-right: 10px;
    width: 90%;
}
.good-title-collect{
    padding-right: 10px;
    width: 10%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.good-title-collect-icon {
}

.good-title-collect-text {
    font-size: small;
    color: #969799;
}

.good-guarantee {
    background-color: white;
    margin-top: 10px;
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    height: 55px;
}

.good-guarantee-left{
    align-items: center;
}

.good-guarantee-left{
    padding-left: 10px;
    padding-top: 5px;
}

.good-guarantee-text{
    font-weight: bold;
    color: #59a558;
}

.good-guarantee-text-bottom {
    font-size: small;
    color: #969799;
    padding-top: 2px;
}
.good-right-icon-arrow {
    padding-right: 10px;
    height: 100%;
    display: flex;
    justify-content: center;
}

.good-carriage{
    background-color: white;
    margin-top: 10px;
    padding-top: 5px;
    padding-left: 10px;
}

.good-discount{
    background-color: white;
    padding-left: 10px;
    padding-top: 15px;
    padding-bottom: 5px;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.good-service{
    margin-top: 10px;
    background-color: white;

    padding-left: 10px;
    padding-top: 5px;
    padding-bottom: 5px;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.good-choice{
    background-color: white;

    padding-left: 10px;
    padding-top: 15px;
    padding-bottom: 5px;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.good-select-color {
    color:#c1c2c3;
}

.good-comment{
    background-color: white;

    margin-top: 10px;

    padding-left: 10px;
    padding-top: 5px;
    padding-bottom: 5px;

    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.good-shop{
    background-color: white;

    margin-top: 10px;

    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.good-shop-info{
    display: flex;
    flex-direction: row;
    padding-left: 10px;
    padding-top: 15px;
}

.good-shop-info-text {
    display: flex;
    flex-direction: column;
    width: 80%;
    justify-content: space-between;
}

.good-shop-info-text-display {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 50%;
}

.good-shop-info-text-tag {
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.good-shop-ope-button{
    padding-right: 10px;
    width: 50%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.good-shop-name{
    font-size:medium;
}

.good-shop-star{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding-left: 10px;
    padding-top: 5px;
    margin-bottom: 10px;
}
